@page
@model ServiceHost.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">بازیابی رمز عبور</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">بازیابی رمز عبور</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                <form method="post" asp-page-handler="ResetPassword">
                                    <input type="hidden" name="Token" value="@Request.Query["Token"]"/>
                                    <input type="hidden" name="Email" value="@Request.Query["Email"]"/>
                                    <div class="login-form">
                                        <h4 class="login-title">بازیابی رمز عبور</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>رمز عبور جدید</label>
                                                <input type="password" name="NewPassword" placeholder="رمز عبور جدید">
                                            </div>
                                            <div class="col-md-12 col-12">
                                                <label>تأیید رمز عبور جدید</label>
                                                <input type="password" name="ConfirmPassword" placeholder="تأیید رمز عبور جدید">
                                            </div>
                                            <div class="col-md-12">
                                                <button class="register-button">بازیابی رمز عبور</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


